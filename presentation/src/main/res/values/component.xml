<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button -->
    <style name="Widget.TeamOne.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TeamOne.Button1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/color_fdfdfd</item>
        <item name="backgroundTint">@color/selected_button</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- TextField -->
    <style name="Widget.TeamOne.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/TextAppearance.TeamOne.Caption1</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.TeamOne.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingStart">0dp</item>
        <item name="android:textColor">@color/color_424242</item>
        <item name="hintTextAppearance">@style/TextAppearance.TeamOne.Body1</item>
        <item name="android:textAppearance">@style/TextAppearance.TeamOne.Body1</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <!-- Chip -->
    <style name="Widget.TeamOne.Chip.ProjectFeed" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:clickable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.TeamOne.Caption2</item>
        <item name="android:textColor">@color/color_616161</item>
        <item name="textEndPadding">8dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="maxLines">1</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/color_eeeeee</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">17dp</item>
        <item name="chipMinTouchTargetSize">17dp</item>
    </style>

    <style name="Widget.TeamOne.Chip.TechStack" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:clickable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.TeamOne.Caption1</item>
        <item name="android:textColor">@color/color_00aee4</item>
        <item name="textEndPadding">12dp</item>
        <item name="textStartPadding">12dp</item>
        <item name="maxLines">1</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/color_background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/color_00aee4</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
    </style>
</resources>