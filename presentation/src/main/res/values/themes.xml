<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TeamOne" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSurface">@color/color_surface</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TeamOne.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TeamOne.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TeamOne.LargeComponent</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.TeamOne.BottomNavigation</item>
    </style>

    <style name="Theme.TeamOne" parent="Base.Theme.TeamOne" />
</resources>