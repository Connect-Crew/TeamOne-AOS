<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".screen.feature.projectwrite.step.ProjectWriteExitDialog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_bg_warnig"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="?shapeAppearanceLargeComponent"
                app:strokeColor="@color/color_d62246"
                app:strokeWidth="1dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning"
                app:layout_constraintBottom_toBottomOf="@id/siv_bg_warnig"
                app:layout_constraintEnd_toEndOf="@id/siv_bg_warnig"
                app:layout_constraintStart_toStartOf="@id/siv_bg_warnig"
                app:layout_constraintTop_toTopOf="@id/siv_bg_warnig"
                app:tint="@color/color_d62246" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/Widget.TeamOne.TextView.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/project_write_exit_title"
            android:textColor="@color/color_616161" />

        <TextView
            style="@style/Widget.TeamOne.TextView.Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/project_write_exit_description"
            android:textColor="@color/color_9e9e9e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.TeamOne.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/color_eeeeee"
                android:text="@string/common_cancel"
                android:textAppearance="@style/TextAppearance.TeamOne.Button2"
                android:textColor="@color/color_616161"
                app:cornerRadius="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                style="@style/Widget.TeamOne.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_confirm"
                android:textAppearance="@style/TextAppearance.TeamOne.Button2"
                app:cornerRadius="0dp" />
        </LinearLayout>
    </LinearLayout>
</layout>