<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".screen.feature.project.projectreport.ProjectReportCompletedAlertDialog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_bg_report"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="?shapeAppearanceLargeComponent"
                app:strokeColor="@color/color_00aee4"
                app:strokeWidth="1dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_siren"
                app:layout_constraintBottom_toBottomOf="@id/iv_bg_report"
                app:layout_constraintEnd_toEndOf="@id/iv_bg_report"
                app:layout_constraintStart_toStartOf="@id/iv_bg_report"
                app:layout_constraintTop_toTopOf="@id/iv_bg_report"
                app:tint="@color/color_00aee4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/Widget.TeamOne.TextView.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/project_detail_report_completed"
            android:textColor="@color/color_616161" />

        <TextView
            style="@style/Widget.TeamOne.TextView.Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/project_detail_report_completed_description"
            android:textColor="@color/color_9e9e9e" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_completed"
            style="@style/Widget.TeamOne.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/common_confirm"
            android:textAppearance="@style/TextAppearance.TeamOne.Button2"
            app:cornerRadius="0dp" />
    </LinearLayout>
</layout>