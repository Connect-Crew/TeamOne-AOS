<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".adapter.home.category.HomeCategoryAdapter">

        <FrameLayout
            android:id="@+id/fl_project_category"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_project_category_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                app:shapeAppearance="?shapeAppearanceLargeComponent"
                app:strokeColor="@color/color_eeeeee"
                app:strokeWidth="1dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_project_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_category_all" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_project_category"
            style="@style/Widget.TeamOne.TextView.Caption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_424242"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/fl_project_category"
            app:layout_constraintStart_toStartOf="@id/fl_project_category"
            app:layout_constraintTop_toBottomOf="@id/fl_project_category"
            tools:text="전체" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
